<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Studbud.Login"
             x:Class="Studbud.Login.LoginPage">
    <ContentPage.BindingContext>
        <local:LoginPageViewModel HttpClient="{StaticResource HttpClient}" AuthenticationService="{StaticResource AuthenticationService}"/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid>
            <Label FontSize="30">Sign in</Label>
            <StackLayout>
                <Entry Text="{Binding Username}" />
                <Entry IsPassword="True" Text="{Binding Password}"/>
            </StackLayout>
            <Button FontSize="20" Text="Login" Command="{Binding LoginCommand, Mode=OneTime}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>